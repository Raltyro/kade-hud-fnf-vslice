	private function getRating(acc:Float):String {
		var misses = tapMissed + comboBreaks, fc:String;
		if (misses > 0) {
			if (misses < 10) fc = "SDCB";
			else fc = "Clear";
		}
		else {
			if (Highscore.tallies.bad > 0 || Highscore.tallies.shits > 0) fc = "FC";
			else if (Highscore.tallies.good > 0) fc = "GFC";
			else if (Highscore.tallies.sick > 0) fc = "SFC";
			else fc = "N/A";
		}

		for (b in wifeConditions) if (b[0] < acc) return "(" + fc + ") " + b[1];
		return "(" + fc + ") D";
	}
