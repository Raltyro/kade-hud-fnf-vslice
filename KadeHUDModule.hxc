	/**
	 * e.difficulty
	 */
	override function onSongRetry(e:SongRetryEvent) {
		if (/*e.eventCanceled ||*/ !saveData.enabled) return;
		resetStats();
	}

	/**
	 * e.step
	 */
	override function onCountdownEnd(e:CountdownScriptEvent) {
		if (/*e.eventCanceled ||*/ !saveData.enabled) return;
		if (!inPlay) tweenSongPosNext = true;
		else if (saveData.showTimer) tweenSongPos();
	}

	var doCheckNoteStyleTemp:Bool = false;
	var tempNoteStyleFallback:String;
	var tempNoteStyleSickPath:String;
	var tempNoteStyleSickData:Dynamic;
	private function checkNoteStyleTemp() if (doCheckNoteStyleTemp) {
		currentState.comboPopUps.noteStyle._data.fallback = tempNoteStyleFallback;
		currentState.comboPopUps.noteStyle._data.assets.judgementSick = tempNoteStyleSickData;
		tempNoteStyleSickData.assetPath = tempNoteStyleSickPath;
		doCheckNoteStyleTemp = false;
	}

	/**
	 * e.judgement
	 * e.score
	 * e.isComboBreak
	 * e.hitDiff
	 * e.doesNotesplash
	 * 
	 * NoteScriptEvent
	 * e.note
	 * e.comboCount
	 * e.playSound
	 * e.healthChange
	 */
	override function onNoteHit(e:HitNoteScriptEvent) {
		// they broke shit in the hscript parser so getMustHitNote is just broke
		if (/*e.eventCanceled ||*/ !inPlay || !saveData.enabled || e.note.noteData.data >= 4) return;

		nps.push(1); // Adds a variable starting from 1 to nps array to indicate that a note has been hit.
		maxScore += Scoring.PBOT1_MAX_SCORE; // Add the max score on note hit.

		// If any configurations isn't required to pass any of these statements, Then it's not using a custom score to calculate the accuracy.
		if (saveData.simpleAcc) {
			// If it's using Simple Accuracy configuration, round the added score to the custom score.
			switch (e.judgement) {
				case 'sick': score += Scoring.PBOT1_MAX_SCORE;
				case 'good': score += Scoring.scoreNotePBOT1(Scoring.PBOT1_SICK_THRESHOLD);
				case 'bad': score += Scoring.scoreNotePBOT1(Scoring.PBOT1_GOOD_THRESHOLD);
				case 'shit': score += Scoring.scoreNotePBOT1(Scoring.PBOT1_BAD_THRESHOLD);
			}
		}
		else if (saveData.accHoldToAcc)
			score = currentState.songScore;
		else // If the current configuration do not account holds to accuracy, use the custom score instead.
			score += e.score;

		// AGHH i don't like how to do this cuz like setting e.judgement is nono and makes gf to play drop down combo anim
		if (saveData.perfectRating && e.score == Scoring.PBOT1_MAX_SCORE && e.judgement == "sick") {
			var noteStyleData = currentState.comboPopUps.noteStyle._data;
			if (doCheckNoteStyleTemp) {
				noteStyleData.assets.judgementSick = tempNoteStyleSickData;
				noteStyleData.fallback = tempNoteStyleFallback;
			}
			else {
				tempNoteStyleSickData = noteStyleData.assets.judgementSick;
				doCheckNoteStyleTemp = tempNoteStyleSickData != null;
				if (doCheckNoteStyleTemp) {
					tempNoteStyleSickPath = tempNoteStyleSickData.assetPath;
					tempNoteStyleFallback = noteStyleData.fallback;
					tempNoteStyleSickData.assetPath += "2";
				}
			}

			currentState.comboPopUps.displayRating("sick");

			noteStyleData.assets.judgementSick = null;
			noteStyleData.fallback = null;
		}
		else
			checkNoteStyleTemp();

		if (saveData.showTiming) {
			// Show the timing difference label if a note has hit.
			timingText.setPosition(FlxG.width * 0.474 + 50 + currentState.comboPopUps.offsets[0], FlxG.height * 0.45 - 20 + currentState.comboPopUps.offsets[1]);
			timingText.text = FlxMath.roundDecimal(e.hitDiff, 2) + "ms";
			timingText.alpha = 1.0;

			switch (e.judgement) {
				case "good": timingText.color = 0x00FF00;
				case "sick": timingText.color = 0x00FFFF;
				default: timingText.color = 0xFF0000;
			}

			FlxTween.cancelTweensOf(timingText);
			FlxTween.tween(timingText, {alpha: 0}, 0.2, {startDelay: 0.1});
		}

		updateScoreText();
	}

	/**
	 * e.note
	 * e.comboCount
	 * e.playSound
	 * e.healthChange
	 */
	override function onNoteMiss(e:NoteScriptEvent) {
		// they broke shit in the hscript parser so getMustHitNote is just broke
		if (/*e.eventCanceled ||*/ !inPlay || !saveData.enabled || e.note.noteData.data >= 4) return;

		maxScore += Scoring.PBOT1_MAX_SCORE;
		score -= 10; // this one is hardcoded...
		prevCombos = Highscore.tallies.combo;
		comboBreaks += 1;

		if (saveData.simpleAcc || !saveData.accHoldToAcc) updateScoreText();
	}


	/**
	 * e.dir
	 * e.hasPossibleNotes
	 * e.healthChange
	 * e.scoreChange
	 * e.playSound
	 * e.playAnim
	 */
	override function onNoteGhostMiss(e:GhostMissNoteScriptEvent) {
		if (/*e.eventCanceled ||*/ !inPlay || !saveData.enabled) return;

		score += e.scoreChange;
		tapMissed += 1;

		updateScoreText();
	}

	private function updateScoreText() {
		if (lastScore != score || lastMaxScore != maxScore) changeScoreText();

		lastScore = score;
		lastMaxScore = maxScore;
	}

	/**
	 * e.elapsed
	 */
	override function onUpdate(e:UpdateScriptEvent) {
		if (!inPlay || !saveData.enabled) return;

		if (prevCombos > 0 && Highscore.tallies.combo <= Math.min(prevCombos, 0)) comboBreaks += 1;
		prevCombos = Highscore.tallies.combo;

		var songPos = Conductor.instance.songPosition, elapsed = e.elapsed;

		if (saveData.showNPS) {
			var i = nps.length;
			while (i > 0) { // FlxArrayUtil.swapAndPop is inlined
				i--;
				nps[i] -= elapsed;
				if (nps[i] < 0) {
					nps[i] = nps[nps.length - 1];
					nps.pop();
				}
			}
		}

		if (saveData.accHoldToAcc) {
			if (!saveData.simpleAcc) score = currentState.songScore;
			if (songPos > lastSongPos && currentState.playerStrumline != null) {
				var addScore:Int;
				for (hold in currentState.playerStrumline.holdNotes.group.members) if (hold != null && hold.alive && songPos > hold.strumTime) {
					addScore = songPos < hold.noteData.length + hold.strumTime ? Math.floor(Constants.SCORE_HOLD_BONUS_PER_SECOND * elapsed) : 0;
					// Implement this instead whenever they fixed delta-time specified only hold bonus scores.
					//addScore = Constants.SCORE_HOLD_BONUS_PER_SECOND * 0.001 * Math.min(songPos - lastSongPos, Math.max(hold.noteData.length - hold.strumTime, 0));

					maxScore += addScore;
					if (saveData.simpleAcc && hold.hitNote && !hold.missedNote) score += addScore;
				}
			}
		}

		if (saveData.showTimer) {
			if ((timeLeft = Math.floor((currentState.currentSongLengthMs - songPos) * 0.001)) != lastTimeLeft)
				songPosText.text = currentState.currentChart.songName + " (" + FlxStringUtil.formatTime(timeLeft, false) + ")";

			songPosBar.value = (songPos / currentState.currentSongLengthMs) * 100;
			songPosBar.updateBar();

			lastTimeLeft = timeLeft;
		}

		checkNoteStyleTemp();
		updateScoreText();

		lastSongPos = songPos;
	}

	private function changeScoreText() {
		//var tallies = Highscore.tallies;
		//var notes = tallies.sick + (tallies.good * 0.785) + (tallies.bad * 0.65) + (tallies.shit * 0.3);
		// (notes / (tallies.totalNotesHit + tallies.missed)
		var acc = maxScore < 1 ? 0 : (score / maxScore) * 100;
		var text = "Score: " + currentState.songScore;

		if (saveData.showNPS) text = "NPS: " + nps.length + " | " + text;

		if (saveData.showTapMisses && tapMissed != 0) text += " | (Tap Misses: " + tapMissed + ") Breaks: " + comboBreaks;
		else text += " | Combo Breaks: " + (comboBreaks + tapMissed);

		text += " | Accuracy: " + FlxMath.roundDecimal(acc, 2) + "% | " + getRating(acc);

		scoreText.text = text;
		scoreText.setPosition(currentState.healthBar.x + (currentState.healthBar.width - scoreText.width) * 0.5, currentState.healthBar.y + 33);
	}

